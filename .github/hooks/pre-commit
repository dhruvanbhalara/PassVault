#!/bin/sh
# Pre-commit hook to check formatting and analysis

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo "ğŸ¨ Running dart format..."
if ! dart format --output=none --set-exit-if-changed .; then
  echo "âŒ Error: Code is not formatted. Run 'dart format .'"
  exit 1
fi

# Check analysis
echo "ğŸ•µï¸ Running flutter analyze..."
if ! flutter analyze .; then
  echo "âŒ Error: flutter analyze found issues."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
exit 0
